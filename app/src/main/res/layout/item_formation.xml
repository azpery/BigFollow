<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.91"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.91"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/formationPhase"
                android:layout_width="56dp"
                android:layout_height="?actionBarSize"
                android:layout_marginRight="10dp"
                android:width="56dp"
                android:height="56dp"
                android:background="@drawable/action_phase_shape"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                tools:text="1" />

            <LinearLayout
                android:layout_width="282dp"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/formationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:text="Formation 1" />

                <TextView
                    android:id="@+id/formationPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="14sp"
                    tools:text="30%" />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/formationProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.91"
            android:progress="30" />
    </LinearLayout>

</LinearLayout>